<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ListView
        android:id="@+id/qr_list2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        tools:listitem="@layout/list_of_friends" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/back_button2"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_action_backbtn"
            android:backgroundTint="@color/blue_crayola" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2sp"
            android:textSize="14dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="QR Codes"
            android:textStyle="bold"
            android:textColor="@color/blue_crayola"/>
    </LinearLayout>

    <ListView
        android:id="@+id/qr_list3"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="200dp"
        tools:listitem="@layout/list_of_friends" >

        <ListView
            android:id="@+id/qr_list4"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="200dp"
            tools:listitem="@layout/list_of_friends" />
    </ListView>

</LinearLayout>
